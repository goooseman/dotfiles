for file in ~/.dotfiles/source/{boot,path,aliases}/*.sh; do
    [ -r "$file" ] && source "$file"
done

# Add dotfiles bin to final path
export PATH="$HOME/.dotfiles/bin:$PATH"

{{if eq .chezmoi.os "darwin"}}
for file in ~/.dotfiles/source/{aliases,boot,path}/osx/*.sh; do
    [ -r "$file" ] && source "$file"
done
export PATH="$HOME/.dotfiles/bin/osx:$PATH"
{{end}}

{{if eq .chezmoi.os "linux"}}
for file in ~/.dotfiles/source/{aliases,boot,path}/linux/*.sh; do
    [ -r "$file" ] && source "$file"
done
export PATH="$HOME/.dotfiles/bin/linux:$PATH"
{{end}}