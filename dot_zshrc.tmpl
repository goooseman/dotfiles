export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:/usr/local/opt/go/libexec/bin:$ANDROID_HOME/tools:$ANDROID_HOME/tools/bin:$ANDROID_HOME/platform-tools:~/Library/Python/3.6/bin:/usr/local/opt/gettext/bin:/usr/local/sbin
