export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

POWERLEVEL9K_CUSTOM_COMMAND_TIME="zsh_command_time"
POWERLEVEL9K_CUSTOM_COMMAND_TIME_BACKGROUND="253" # white
POWERLEVEL9K_CUSTOM_COMMAND_TIME_FOREGROUND="000" # black

ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=15

# ZSH_THEME="robbyrussell"
ZSH_THEME="powerlevel9k/powerlevel9k"
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status root_indicator background_jobs history time ram custom_command_time)

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git git-flow autojump sublime sudo zsh-autosuggestions command-time docker kubectl)

source $ZSH/oh-my-zsh.sh

# Aliases
# For a full list of active aliases, run `alias`.

# SSH

alias ssh_pi="ssh pi@raspberrypi.local"

# KOPS (kubernetes) config
export KOPS_BUCKET_NAME=trucknet-kops-state-store
export KOPS_CLUSTER_NAME=k8s-staging.trucknet.io
export KOPS_STATE_STORE=s3://${KOPS_BUCKET_NAME}

{{if eq .chezmoi.os "darwin"}}
for file in ~/.dotfiles/source/{boot,path}/osx/*; do
    [ -r "$file" ] && source "$file"
done
{{end}}

for file in ~/.dotfiles/source/{boot,path,aliases}/*; do
    [ -r "$file" ] && source "$file"
done